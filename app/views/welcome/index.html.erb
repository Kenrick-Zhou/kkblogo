<div class="container">

  <% @logos.each do |logo| %>
    <div class="row">
      <h2><img src="<%= logo.png_url + '!md' %>" style="width: auto; height: auto;">
        <small><a class="btn btn-default" href="<%= logo.svg_url %>" role="button" target="_blank">下载SVG &raquo;</a></small>
      </h2>

      <hr style="height:1px;border:none;border-top:1px dashed #0066CC; margin-top: -10px;" />
      <div class="table">
        <table class="table table-striped table-hover">
          <thead>
          <tr>
            <th class="hidden-xs">ID</th>
            <th>Name</th>
            <th class="hidden-xs">Ext</th>
            <th class="hidden-xs">Width</th>
            <th class="hidden-xs">Height</th>
            <th></th>
          </tr>
          </thead>

          <% @thumbs.each do |thumb| %>
            <tr>
              <td class="hidden-xs"><%= thumb.id %></td>
              <td><%= thumb.name %></td>
              <td class="hidden-xs"><%= thumb.ext %></td>
              <% if thumb.width == -1 %>
                <td class="hidden-xs">宽度自适应</td>
              <% else %>
                <td class="hidden-xs"><%= thumb.width %>px</td>
              <% end %>
              <% if thumb.height == -1 %>
                <td class="hidden-xs">高度自适应</td>
              <% else %>
                <td class="hidden-xs"><%= thumb.height %>px</td>
              <% end %>
              <td class="text-right">
                <a class="btn btn-default" href="<%= logo.png_url + '!' + thumb.ext %>" role="button" target="_blank">下载PNG</a>
                &nbsp &nbsp
                <a class="btn btn-default" href="<%= logo.jpg_url + '!' + thumb.ext %>" role="button" target="_blank">下载JPG</a>
              </td>
            </tr>
          <% end %>
        </table>
      </div>
    </div>
  <% end %>


